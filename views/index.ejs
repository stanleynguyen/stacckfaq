<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>Stacck FAQ</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <div class="container">
    <div class="row">
      <h2 class="text-center">Add more faq(s)</h2>
      <div class="col-md-offset-2 col-md-8 col-xs-12">
        <form id="form" style="padding-bottom: 5px;">
          <fieldset class="form-group">
            <label for="question">Question</label>
            <input type="text" class="form-control question" placeholder="Question..." required>
          </fieldset>
          <fieldset class="form-group">
            <label for="answer">Answer</label>
            <textarea class="form-control answer" placeholder="Answer..." required></textarea>
          </fieldset>
          <button class="btn btn-primary form-control"><i class="glyphicon glyphicon-send"></i> Submit</button>
        </form>
        <div class="alert alert-success" style="display: none;"><strong>Success!</strong> Your FAQ is successfully added to our knowledgebase!</div>
        <div class="alert alert-danger" style="display: none;"><strong>Error!</strong> Please try again!</div>
        <hr/>
      </div>
    </div>
    <div class="row">
      <h2 class="text-center">Manage faq(s)</h2>
      <div class="col-md-offset-2 col-md-8 col-xs-12" id="faq">
        <% faq.forEach(function(item) { %>
          <div class="jumbotron" id="<%= item.id %>">
          <form>
            <fieldset class="form-group">
              <label for="question">Question</label>
              <input type="text" class="form-control question" value="<%= item.question %>" disabled required/>
            </fieldset>
            <fieldset class="form-group">
              <label for="answer">Answer</label>
              <textarea class="form-control answer" disabled required><%= item.answer %></textarea>
            </fieldset>
            <button class="btn btn-primary" type="button"><i class="glyphicon glyphicon-pencil"></i> Edit</button>
            <button class="btn btn-success" type="submit"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
            <button class="btn btn-default" type="button">Cancel</button>
            <button class="btn btn-danger" type="button"><i class="glyphicon glyphicon-trash"></i> Delete</button>
          </form>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <script src="js/application.js"></script>
</body>